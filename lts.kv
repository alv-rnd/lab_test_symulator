#:import MeshLinePlot kivy.garden.graph.MeshLinePlot

<CustomTextInput@TextInput>:
    multiline: False
    size_hint: 1, None
    hint_text: "int"
    input_filter: 'int'
    write_tab: False

<CustomLabel@Label>:
    size_hint: 1, None
    height: self.texture_size[1] + (self.texture_size[1] / 1.5)
    font_size:
    text: "None"

<QuestionButton@Button>:
    size_hint: .3, None
    text: "?"

<LtsBoxLayout>:
#---Pasek menu (ActionBar)---#
    orientation: "vertical"
    fullscreen: True
    id: main
    main: main
    graphs_screens_py: graphs_screens_kv
    screen_text_py: screen_text_kv

    ActionBar:
        ActionView:
            use_separator: True
            ActionPrevious:
                with_previous: False
                app_icon: "logo.png"
                title: "Symulacja procesu COP"
            ActionButton:
                text: "Button 1"
            ActionButton:
                text: "Button 2"
            ActionButton:
                text: "Exportuj do excela"
            ActionButton:
                text: "Ustawienia"
                on_release: app.open_settings()

    BoxLayout:
        orientation: "horizontal"

        BoxLayout:
            orientation: "vertical"
            size_hint_x: .3

            BoxLayout:
                orientation: "vertical"
                padding: 5, 20, 8, 20
                Label:
                    size_hint_y: None
                    height: self.texture_size[1]
                    #halign: 'left'
                    text: "Ustawienia glowne"

                GridLayout:
                ### G??wne parametry symulacji ###
                    cols: 2
                    row_force_default: True
                    row_default_height: 40
                    CustomLabel:
                        id: label_test_qty
                        text: "Ilo?? test?w:"
                    BoxLayout:
                        orientation: 'horizontal'
                        CustomTextInput:
                            id: test_qty
                            height: label_test_qty.size[1]
                            hint_text: "qty"
                            text: "100"
                        QuestionButton:
                            id: test_text
                            pos: label_test_qty.x, label_test_qty.texture_size[1] / 2
                            height: label_test_qty.size[1]
                            on_release: root.questionpopup.open("test_text")


                    CustomLabel:
                        id: label_tc_qty
                        text: "Ilosc Komor:"
                    BoxLayout:
                        orientation: 'horizontal'
                        CustomTextInput:
                            id: tc_qty
                            height: label_tc_qty.size[1]
                            hint_text: "qty"
                            text: "4"
                        QuestionButton:
                            id: tc_text
                            pos: label_tc_qty.x, label_tc_qty.texture_size[1] / 2
                            height: label_tc_qty.size[1]
                            on_release: root.questionpopup.open("tc_text")

                    CustomLabel:
                        id: label_tr_qty
                        text: "Ilosc TR:"
                    BoxLayout:
                        orientation: 'horizontal'
                        CustomTextInput:
                            id: tr_qty
                            height: label_tr_qty.size[1]
                            hint_text: "qty"
                            text: "2"
                        QuestionButton:
                            id: tr_text
                            pos: label_tr_qty.x, label_tr_qty.texture_size[1] / 2
                            height: label_tr_qty.size[1]
                            on_release: root.questionpopup.open("tr_text")

                    CustomLabel:
                        id: label_wich_qty
                        text: "Ilosc WICH:"
                    BoxLayout:
                        orientation: 'horizontal'
                        CustomTextInput:
                            id: wich_qty
                            height: label_wich_qty.size[1]
                            hint_text: "qty"
                            text: "2"
                        QuestionButton:
                            id: wich_text
                            pos: label_wich_qty.x, label_wich_qty.texture_size[1] / 2
                            height: label_wich_qty.size[1]
                            on_release: root.questionpopup.open("wich_text")

                    CustomLabel:
                        id: label_trunks_qty
                        text: "Trumny:"
                    BoxLayout:
                        orientation: 'horizontal'
                        CustomTextInput:
                            id: trunks_qty
                            height: label_trunks_qty.size[1]
                            hint_text: "qty/day"
                            text: "3"
                        QuestionButton:
                            id: trunk_text
                            pos: label_trunks_qty.x, label_trunks_qty.texture_size[1] / 2
                            height: label_trunks_qty.size[1]
                            on_release: root.questionpopup.open("trunk_text")

                    CustomLabel:
                        id: label_frq_check_in
                        text: "Wrzuty:"
                    BoxLayout:
                        orientation: 'horizontal'
                        BoxLayout:
                            id: frq_check_in_box
                            CustomTextInput:
                                id: frq_check_in
                                height: label_frq_check_in.size[1]
                                hint_text: "qty/h"
                                text: "120"
                            Spinner:
                                text: "Minuty"
                                values: ["Minuty", "Godziny", "Dni", "Miesi?ce", "Lata"]
                                size_hint_y: None
                                height: label_frq_check_in.size[1]
                                width: frq_check_in_box.size[0] / 2

                                id: time_format
                                on_text: root.time_format(time_format.text)
                        QuestionButton:
                            id: frq_text
                            pos: label_frq_check_in.x, label_frq_check_in.texture_size[1] / 2
                            height: label_frq_check_in.size[1]
                            on_release: root.questionpopup.open("frq_text")


                    CustomLabel:
                    # na razie to, ale mysle zeby zmienic w tym miejscu na spinner i dac wybor qty albo time
                        id: label_frq_check_in
                        text: "Czas symulacji:"
                    BoxLayout:
                        orientation: 'horizontal'
                        CustomTextInput:
                            id: frq_check_in
                            height: label_frq_check_in.size[1]
                            hint_text: "time"
                            text: "0"
                        QuestionButton:
                            id: frq_text
                            pos: label_frq_check_in.x, label_frq_check_in.texture_size[1] / 2
                            height: label_frq_check_in.size[1]
                            on_release: root.questionpopup.open("frq_text")

                Label:
                    size_hint_y: None
                    height: self.texture_size[1]
                    #halign: 'left'
                    text: "Czasy poszczegolnych zdarzen"

                GridLayout:
                ### G??wne ustawienia czas?w symulacji ###
                    cols: 2
                    row_force_default: True
                    row_default_height: 40
                    CustomLabel:
                        id: label_transport_time
                        text: "Czas transportu:"
                    BoxLayout:
                        orientation: 'horizontal'
                        CustomTextInput:
                            id: transport_time
                            height: label_transport_time.size[1]
                            hint_text: "time"
                            text: "120"
                        QuestionButton:
                            id: frq_text
                            pos: label_transport_time.x, label_transport_time.texture_size[1] / 2
                            height: label_transport_time.size[1]

                    CustomLabel:
                        id: label_check_in_time
                        text: "Czas Check_in:"
                    BoxLayout:
                        orientation: 'horizontal'
                        CustomTextInput:
                            id: check_in_time
                            height: label_check_in_time.size[1]
                            hint_text: "time"
                            text: "30"
                        QuestionButton:
                            id: frq_text
                            pos: label_check_in_time.x, label_check_in_time.texture_size[1] / 2
                            height: label_check_in_time.size[1]

                    CustomLabel:
                        id: label_condi_time
                        text: "Czas Condi:"
                    BoxLayout:
                        orientation: 'horizontal'
                        CustomTextInput:
                            id: condi_time
                            height: label_condi_time.size[1]
                            hint_text: "time"
                            text: "240"
                        QuestionButton:
                            id: frq_text
                            pos: label_condi_time.x, label_condi_time.texture_size[1] / 2
                            height: label_condi_time.size[1]

                    CustomLabel:
                        id: label_deploy_time
                        text: "Bum time:"
                    BoxLayout:
                        orientation: 'horizontal'
                        CustomTextInput:
                            id: deploy_time
                            height: label_deploy_time.size[1]
                            hint_text: "time"
                            text: "15"
                        QuestionButton:
                            id: frq_text
                            pos: label_deploy_time.x, label_deploy_time.texture_size[1] / 2
                            height: label_deploy_time.size[1]

                    CustomLabel:
                        id: label_anal_time
                        text: "Anal time:"
                    BoxLayout:
                        orientation: 'horizontal'
                        CustomTextInput:
                            id: anal_time
                            height: label_anal_time.size[1]
                            hint_text: "time"
                            text: "15"
                        QuestionButton:
                            id: frq_text
                            pos: label_anal_time.x, label_anal_time.texture_size[1] / 2
                            height: label_anal_time.size[1]
            BoxLayout:
                size_hint_y: .06
                orientation: 'horizontal'
                BoxLayout:
                    padding: 2
                    Button:
                        text: 'Start'
                        on_release: root.start()

        Label:
            size_hint_x: None
            width: 2
#            borders: 2, 'solid', (1, 1, 1, 1)
#            color: (0, 0, 0, 0)
            canvas.before:
                Color:
                    rgba: .2, .2, .2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    padding: 2
                    size_hint_y: .05
                    Label:
                        id: screen_text_kv
                        text: ""

                    BoxLayout:
                        size_hint_x: .4
                        Spinner:
                            text: "Wykres"
                            values: ["Wykres 1", "Wykres 2", "Wykres 3", "Wykres 4"]
                            id: graphs_spinner_kv
                            on_text: root.change_screen(graphs_spinner_kv.text)

                ScreenManager:
                    id: graphs_screens_kv
                    Graph_1:
                        id: graph_1_kv
                        name: "graph_1"
                    Graph_2_Screen:
                        id: graph_2_kv
                        name: "graph_2_screen"
                    Graph_3:
                        id: graph_3_kv
                        name: "graph_3"
                    Graph_4:
                        id: graph_4_kv
                        name: "graph_4"

            BoxLayout:
                size_hint_y: .06
                padding: 2
                spacing: 2
                Button:
                    text: 'Param wykres 1'
                Button:
                    text: 'Param wykres 2'
                Button:
                    text: 'Param wykres 3'
                Button:
                    text: 'Param wykres 4'


<Graph_1>:
    id: graph_1_kv



<Graph_2_Screen>:
    id: graph_2_kv
    Graph_2:
        id: graph_2_show


<Graph_3>:
    id: graph_3_kv
    Label:
        text: "Wykres 3"

<Graph_4>:
    id: graph_4_kv
    Label:
        text: "Wykres 4"

<QuestionPopup>:
    size_hint: 0.3, None
    height: popup_content.height + 50
    title: "Info"
    title_size: 25
    auto_dismiss: False
    message: message
    BoxLayout:
        orientation: "vertical"
        id: popup_content
        size_hint: 1, None
        height: self.width
        padding: root.width * .08, root.height * .08
        specing: min(root.width, root.height) * .08
        Label:
            id: message
            text: "None"
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            text_size: (self.width, self.texture_size[1])
            #font_size: '40dp'
            markup: True
        Button:
            text: "Close"
            size_hint: 1, None
            height: '40dp'
            on_release: root.dismiss()