<CustomButton@Button>:
#--- customowy button ---#
    #background_color: ("#000887")

<LtsBoxLayout>:
#---Pasek menu (ActionBar)---#
    orientation: "vertical"
    fullscreen: True
#    background_color: ("#909090")

    ActionBar:
        ActionView:
            use_separator: True
            ActionPrevious:
                with_previous: False
                app_icon: "logo.png"
                title: "Symulacja procesu COP"
            ActionButton:
                text: "Button 1"
            ActionButton:
                text: "Button 2"
            ActionButton:
                text: "Exportuj do excela"
            ActionButton:
                text: "Ustawienia"


    BoxLayout:
        orientation: "horizontal"

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .3
            Label:
                borders: 2, 'solid', (1, 1, 1, 1)
                color: (0, 0, 0, 0)
                text: "Obszar z parametrami symulacji"
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            BoxLayout:
                size_hint_y: .06
                orientation: 'horizontal'
                BoxLayout:
                    padding: 2
                    Button:
                        text: 'Start'

        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    padding: 2
                    size_hint_y: .05
                    Label:

                    BoxLayout:
                        size_hint_x: .4
                        CustomButton:
                            text: 'DropList z Wykresami'
                Label:
                    text: 'Screeny z wykresami'

            BoxLayout:
                size_hint_y: .06
                padding: 2
                spacing: 2
                Button:
                    text: 'Param wykres 1'
                Button:
                    text: 'Param wykres 2'
                Button:
                    text: 'Param wykres 3'
                Button:
                    text: 'Param wykres 4'
